{
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts", "**/.*.tsx", "tsup.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "lib": ["ES2021"],
    "module": "commonjs",
    "target": "ES2021",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}